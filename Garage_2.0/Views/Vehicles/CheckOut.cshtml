@model Garage_2._0.Models.ReceiptViewModel

@{
    ViewData["Title"] = "CheckOut";
}

<h1>Checka ut</h1>

<h3>Vill du checka ut?</h3>
<div>
    <h4>Fordonet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegNo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegNo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
    </dl>

    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="CheckOutTime" class="control-label"></label>
                <input asp-for="CheckOutTime" class="form-control" />
                <span asp-validation-for="CheckOutTime" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

    <a asp-action="Receipt" asp-route-id="@Model.Id">Checka ut och få kvitto</a>
    <a asp-action="Index">Tillbaka</a>
</div>