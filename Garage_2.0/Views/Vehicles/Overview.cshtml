@model IEnumerable<VehicleIndexViewModel>
@{
    ViewData["Title"] = "Översikt fordon";
}

<h1>Översiktsvy</h1>

<form asp-action = "Search">
  <div class="input-group mb-3">
       <input type="text" class="form-control" name="regNo" placeholder="Sök på registeringsnummer ..." />
    <div class="input-group-append">
        <select name="vehicleType" class="form-control" asp-items="@Html.GetEnumSelectList<VehicleType>()">
            <option selected="selected" value="">Välj fordonstyp</option>
        </select>
    </div>
    <div class="input-group-append"> 
      <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Sök</i> </button>
    </div>
  </div> 
</form>

<p>
    <a asp-action="Create">Parkera fordon</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
                ParkedTime.
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Parked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTime)
            </td>
            <td>
              
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Checkout</a>
            </td>
        </tr>
}
    </tbody>
</table>
